{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run GUI",
            "type": "python",
            "request": "launch",
            "module": "src.gui",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Playlist as Module",
            "type": "python",
            "request": "launch",
            "module": "src.playlist",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s",
                "tests",
                "-p",
                "test_*.py"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}